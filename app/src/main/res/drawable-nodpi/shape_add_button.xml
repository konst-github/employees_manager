<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:height="@dimen/add_button_size"
        android:width="@dimen/add_button_size">
        <shape android:shape="oval">
            <solid android:color="@color/accent"/>
        </shape>
    </item>
    <item
        android:start="@dimen/add_button_plus_margin"
        android:end="@dimen/add_button_plus_margin">
        <shape android:shape="line">
            <stroke
                android:width="@dimen/add_button_plus_size"
                android:color="@android:color/white" />
        </shape>
    </item>
    <item
        android:start="@dimen/add_button_plus_margin"
        android:end="@dimen/add_button_plus_margin">
        <rotate
            android:fromDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="-90">
            <shape android:shape="line">
                <stroke
                    android:width="@dimen/add_button_plus_size"
                    android:color="@android:color/white" />
            </shape>
        </rotate>
    </item>
</layer-list>